<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
   android:id="@+id/linearLayout1"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:orientation="vertical"
   android:background="@drawable/myboy" 
   android:padding="20dp"
   android:gravity="right"
   xmlns:android="http://schemas.android.com/apk/res/android">
   
     
   <TableLayout
      android:id="@+id/widget52"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:weightSum="1">
      
      <TextView
         android:id="@+id/widget58"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#000000"
          android:textStyle="bold"
          android:textSize="25sp"
         android:text="计算你的BMI"
         android:gravity="center_vertical|center_horizontal" 
         android:layout_weight="0.24">
      </TextView>
      
      <TableRow
         android:id="@+id/widget53" 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

          <TextView
              android:id="@+id/widget55"
              android:layout_height="90dp"
              android:textColor="#000000"
              android:textStyle="bold"
              android:textSize="18sp"
              android:text="性别"
              android:layout_weight="0.5"
              android:layout_width="0dp">
          </TextView>

         <RadioGroup 
             android:id="@+id/radioGroup" 
             android:contentDescription="性别" 
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"
             android:layout_weight="1"
             >
    
          <RadioButton 
               android:id="@+id/rbutton1"
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content" 
              android:text="男" 
              android:checked="true"
              android:textColor="#000000"
              android:textStyle="bold"
              android:textSize="18sp"
              >
              
          </RadioButton>
    
          <RadioButton 
              android:id="@+id/rbutton2"
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content" 
              android:text="女"
              android:textColor="#000000"
              android:textStyle="bold"
              android:textSize="18sp">
              
          </RadioButton>    
  </RadioGroup>
         
         
     </TableRow>
     
     <TableRow
        android:id="@+id/widget59"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         
        <TextView
            android:id="@+id/widget58"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="身高"
            android:layout_weight="1" 
            android:layout_width="0dp">
        </TextView>

        <EditText
           android:id="@+id/et1"
           android:layout_height="wrap_content"
           android:text="0"
           android:inputType="numberDecimal"
           android:textSize="18sp"
           android:layout_weight="1" 
           android:layout_width="wrap_content"> 
       </EditText>
       
        <TextView
            android:id="@+id/widget61"
            android:layout_height="wrap_content"
            android:textColor="#000000" 
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="cm"
            android:layout_weight="0.8" 
            android:layout_width="0dp">
          </TextView>
    </TableRow>
    
      <TableRow
        android:id="@+id/widget62"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         
        <TextView
            android:id="@+id/widget61"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="体重"
            android:layout_weight="1" 
            android:layout_width="0dp">
        </TextView>

        <EditText
           android:id="@+id/et2"   
           android:layout_height="wrap_content"
           android:text="0"
           android:inputType="numberDecimal"
           android:textSize="18sp"
           android:layout_weight="1" 
           android:layout_width="wrap_content">
       </EditText>
       
        <TextView
            android:id="@+id/widget65"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="kg"
            android:layout_weight="0.8" 
            android:layout_width="0dp">
          </TextView>
    </TableRow>

    <Button
       android:id="@+id/button01"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="计算"
       android:textStyle="bold"
       android:textSize="18sp">
    </Button>
    
    <TextView 
         android:id="@+id/huanying"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:textColor="#FF0000"
       android:text=""
        android:textStyle="bold"
       android:textSize="18sp"
        />
    
     <TextView 
       android:id="@+id/result"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:textColor="#FF0000"
       android:text=""
        android:textStyle="bold"
       android:textSize="18sp"
       />
   
   </TableLayout>
        
  
   
        
</LinearLayout>   
