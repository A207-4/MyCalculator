<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d3d3d3"
    android:orientation="vertical" >

     <TableRow
         android:layout_width="fill_parent"
         android:layout_height="27dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#808080"
            android:textSize="30sp" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/showtext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:singleLine="true"
            android:text="0"
            android:textColor="#808080"
            android:textSize="40sp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:ellipsize="start"
            android:gravity="right"
            android:singleLine="true"
            android:text="0"
            android:textSize="40sp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <!-- 阶乘 -->

        <Button
            android:id="@+id/fact"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="!" />
        <!-- 平方 -->

        <Button
            android:id="@+id/square"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="^" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="√" />

        <Button
            android:id="@+id/pi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="π" />

        <Button
            android:id="@+id/C"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="C" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <!-- 阶乘 -->

        <Button
            android:id="@+id/sin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="sin" />
        <!-- 平方 -->

        <Button
            android:id="@+id/left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="(" />

        <Button
            android:id="@+id/right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text=")" />

        <Button
            android:id="@+id/e"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="e" />

        <Button
            android:id="@+id/back"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="back" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <!-- 阶乘 -->

        <Button
            android:id="@+id/cos"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="cos" />
        <!-- 平方 -->

        <Button
            android:id="@+id/seven"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="9" />

        <Button
            android:id="@+id/div"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="÷" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <!-- 阶乘 -->

        <Button
            android:id="@+id/tan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="tan" />
        <!-- 平方 -->

        <Button
            android:id="@+id/four"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="4" />

        <Button
            android:id="@+id/five"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="5" />

        <Button
            android:id="@+id/six"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="6" />

        <Button
            android:id="@+id/mul"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="×" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <!-- 阶乘 -->

        <Button
            android:id="@+id/ln"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="ln" />
        <!-- 平方 -->

        <Button
            android:id="@+id/one"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="2" />

        <Button
            android:id="@+id/three"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="3" />

        <Button
            android:id="@+id/sub"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="-" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <!-- 阶乘 -->

        <Button
            android:id="@+id/log"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="log" />
        <!-- 平方 -->

        <Button
            android:id="@+id/zero"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="0" />

        <Button
            android:id="@+id/point"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="." />

        <Button
            android:id="@+id/equl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="=" />

        <Button
            android:id="@+id/add"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="+" />
    </TableRow>

</LinearLayout>